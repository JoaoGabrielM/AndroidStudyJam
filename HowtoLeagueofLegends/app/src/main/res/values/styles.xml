<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <!--Formatação de cada quadrado na tela inicial-->
    <style name="divisoes_tela_principal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Formatação das linhas na tela principal-->
    <style name="linhas_tela_pricipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--Formatação do texto na tela principal-->
    <style name="texto_caixa_tela_principal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--Formatação de cada palavra na tela inicial-->
    <style name="imagem_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!--Estilização dos títulos das subpáginas-->
    <style name="cabecalho_subpaginas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--Estilização dos subtítulos das subpáginas-->
    <style name="subtitulo_subpaginas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--Estilização dos subsubtítulos das subpáginas-->
    <style name="subsubtitulo_subpaginas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--Estilização dos textos das subpáginas-->
    <style name="texto_explicativo_subpaginas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!--Estilização dos textos da página da Selva-->
    <style name="texto_caixa_a_selva">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">100dp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
